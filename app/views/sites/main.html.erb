<table>
  <thead>
    <tr><th colspan=3 ><h2>JE CREE UN COMMENTAIRE</h2></th></tr>
  </thead>
    <tr>
      <th>Adresse de la video: http...</th>
      <th>Pseudo</th>
      <th colspan="3"></th>
    </tr>

<div class="large-12 columns ">
  <p id="notice" class= "alert-box round " style="display:none;"><%= notice %></p>
</div>

      <% @commentaires.each do |commentaire|%>
        <div class="large-4 columns ">
          <%=commentaire.comment%>
        </div>
      <% end %>

  <tbody id="all_site">
      <tr>
        <td class="field">
          <input type="text" name="site[url]" id="new_site_url">
        </td>
        <td class="field">
          <input type="text" name="site[pseudo]" id="new_site_pseudo">
        </td>
        <td class="actions">
          <div id="new_site_url_button" class="button">Je l'ai commenté</div>
        </td>
      </tr>


      <thead>
      <tr><th colspan=3 ><h2>JE LIKE UN COMMENTAIRE EXISTANT</h2></th></tr>
      </thead>
  </tbody>

  <tbody id="all_sites">  
    <% @sites.each do |site| %>
      <tr>
        <% if site.users.include? @user %>
          <td><%= site.url %></td>
          <td></td>
        <% else%>
          <td><a target="_blank" href="<%= site.url %>"><%= site.url %></a></td>
          <td><%= site.pseudo %></td>
          <td>
            <div type="new_checkin" class="button" url="<%=checkin_site_path({:id => site})%>">
            "je l'ai liké"
            </div>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

